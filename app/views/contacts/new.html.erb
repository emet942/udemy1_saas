<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="well">
			<%= form_for @contact do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, placeholder: 'Barry Sanders', class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, placeholder: 'bsanders@lions.com', class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :comments %>
					<%= f.text_area :comments, placeholder: '...', class: 'form-control' %>
				</div>

				<%= f.submit 'Submit', class: 'btn btn-info' %>
			<% end %>
		</div>
	</div>
</div>

