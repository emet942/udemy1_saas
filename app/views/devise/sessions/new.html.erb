<div class="jumbotron text-center home">
  <h1>Welcome to The Locker Room</h1>
  <h3>Where sports fans connect with each other, no matter where they are.</h3>
  <br>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Open Your Locker</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="field">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions form-group">
          <%= f.submit "Open", class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>