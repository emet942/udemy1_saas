<!DOCTYPE html>
<html>
<head>
  <title>The Locker Room</title>
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1" /> -->
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class='container'>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <div class="brand-style" id="header-logo">
        	<i class="fa fa-trophy"></i>
        	The Locker Room
        </div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="main-nav-collapse">
      <div class="nav navbar-nav navbar-right">
        <% if current_user %>
          <%= button_to "Close Locker", destroy_user_session_path, method: :delete, class: 'btn btn-default navbar-btn' %>
        <% else %>
          <%= link_to "Open Locker", new_user_session_path, class: 'btn btn-primary navbar-btn list-btn', method: :get %>
          <%= link_to "Join the Team", root_path, class: 'btn btn-success navbar-btn list-btn', method: :get %>
        <% end %>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact Us", new_contact_path %></li>
      </ul>
      
    </div><!-- /.navbar-collapse -->
  </div>
</nav>


<div class="container">
    <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "alert alert-#{key}" %>
    <% end %>
	<%= yield %>
</div>

</body>
</html>
